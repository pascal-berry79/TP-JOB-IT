{% extends 'base.html.twig' %}

{% block title %}Job It - Accueil{% endblock %}

{% block body %}

    {% for categorie in categories %}
        <a href="{{categorie}}">{{categorie}}</a>
        <hr>
        {% for job in jobs %}
            <p>Agence {{job.entreprise}}</p>
            <div class="jobs-accueil">
                <img src="images/logos/{{job.logo}}" alt="Logo {{job.entreprise}}">
                <div>
                    <p>Agence {{job.entreprise}}</p>
                    <span>{{job.metier}}</span>
                    <ul>
                        <li>{{job.contrat}}</li>
                        <li>{{job.lieu}}</li>
                        <li>{{job.pays}}</li>
                    </ul>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

{% endblock %}
